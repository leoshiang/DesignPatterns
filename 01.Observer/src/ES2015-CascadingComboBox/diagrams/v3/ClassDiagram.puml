@startuml

skinparam defaultFontName "Fira Code"
skinparam class {
    FontStyle bold
    FontSize 12
}

scale 800*800

class CascadingComboBox{
    -children
    -data
    -defaultOptions
    -domObject
    -id
    +onCreateChildData
    +onCreateOption
    +onItemSelected
    -bindEvents()
    -clearChildren
    -createOptions()
    -fillOptions()
    -updateChildren()
    +attachChild()
    +clear()
    +setData()
}

